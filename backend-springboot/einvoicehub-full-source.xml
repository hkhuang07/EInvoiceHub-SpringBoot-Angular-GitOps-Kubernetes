                .apiKeyHash("SHA256_HASH_OF_" + rawApiKey) // Th·ª±c t·∫ø d√πng hashing chu·∫©n
                .scopes(scopeJson != null ? scopeJson : "[\"invoice:read\", \"invoice:create\"]")
