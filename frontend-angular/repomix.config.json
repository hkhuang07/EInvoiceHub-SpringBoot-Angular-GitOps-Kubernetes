{
  "output": {
    "filePath": "einvoicehub-frontend-source.txt",
    "style": "xml",
    "removeComments": false,
    "showLineNumbers": true
  },
  "include": ["src/**/*", "angular.json", "package.json", "tsconfig.json"],
  "ignore": {
    "customPatterns": [
      "node_modules/**",
      "dist/**",
      ".angular/**",
      "**/assets/**",
      "**/*.spec.ts",
      "**/*.ico",
      "**/*.png",
      "**/*.jpg",
      "**/*.svg",
      "package-lock.json",
      "coverage/**",
      ".editorconfig",
      ".gitignore"
    ],
    "useGitignore": true,
    "useDefaultPatterns": true
  },
  "security": {
    "enableSecurityCheck": true
  }
}
